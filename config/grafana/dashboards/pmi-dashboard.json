{
  "uid": "pmi-api-dashboard",
  "title": "PMI API Dashboard",
  "tags": ["pmi", "api", "fastapi"],
  "timezone": "browser",
  "refresh": "10s",
  "time": {
    "from": "now-15m",
    "to": "now"
  },
  "panels": [
    {
      "id": 1,
      "title": "Total de Requests",
      "type": "stat",
      "gridPos": { "x": 0, "y": 0, "w": 6, "h": 4 },
      "targets": [
        {
          "expr": "sum(http_requests_total{job=\"fastapi\"})",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "blue", "value": null }
            ]
          }
        }
      }
    },
    {
      "id": 2,
      "title": "Requests/s",
      "type": "stat",
      "gridPos": { "x": 6, "y": 0, "w": 6, "h": 4 },
      "targets": [
        {
          "expr": "sum(rate(http_requests_total{job=\"fastapi\"}[1m]))",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "reqps",
          "decimals": 2,
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null }
            ]
          }
        }
      }
    },
    {
      "id": 3,
      "title": "P95 Latency",
      "type": "stat",
      "gridPos": { "x": 12, "y": 0, "w": 6, "h": 4 },
      "targets": [
        {
          "expr": "histogram_quantile(0.95, sum(rate(http_request_duration_seconds_bucket{job=\"fastapi\"}[5m])) by (le)) * 1000",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "ms",
          "decimals": 0,
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 500 },
              { "color": "red", "value": 1000 }
            ]
          }
        }
      }
    },
    {
      "id": 4,
      "title": "Erros 5xx",
      "type": "stat",
      "gridPos": { "x": 18, "y": 0, "w": 6, "h": 4 },
      "targets": [
        {
          "expr": "sum(increase(http_requests_total{job=\"fastapi\", status=\"5xx\"}[1h])) or vector(0)",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 1 },
              { "color": "red", "value": 10 }
            ]
          }
        }
      }
    },
    {
      "id": 5,
      "title": "API Uptime",
      "type": "stat",
      "gridPos": { "x": 0, "y": 4, "w": 6, "h": 4 },
      "targets": [
        {
          "expr": "(time() - process_start_time_seconds{job=\"fastapi\"})",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "s",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null }
            ]
          }
        }
      }
    },
    {
      "id": 6,
      "title": "API Memory (RSS)",
      "type": "stat",
      "gridPos": { "x": 6, "y": 4, "w": 6, "h": 4 },
      "targets": [
        {
          "expr": "process_resident_memory_bytes{job=\"fastapi\"}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "bytes",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 536870912 },
              { "color": "red", "value": 1073741824 }
            ]
          }
        }
      }
    },
    {
      "id": 7,
      "title": "Open File Descriptors",
      "type": "stat",
      "gridPos": { "x": 12, "y": 4, "w": 6, "h": 4 },
      "targets": [
        {
          "expr": "process_open_fds{job=\"fastapi\"}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 500 },
              { "color": "red", "value": 900 }
            ]
          }
        }
      }
    },
    {
      "id": 8,
      "title": "API CPU Rate",
      "type": "stat",
      "gridPos": { "x": 18, "y": 4, "w": 6, "h": 4 },
      "targets": [
        {
          "expr": "rate(process_cpu_seconds_total{job=\"fastapi\"}[1m]) * 100",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "decimals": 2,
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 50 },
              { "color": "red", "value": 80 }
            ]
          }
        }
      }
    },
    {
      "id": 9,
      "title": "HTTP Requests por MÃ©todo",
      "type": "timeseries",
      "gridPos": { "x": 0, "y": 8, "w": 12, "h": 8 },
      "targets": [
        {
          "expr": "sum(rate(http_requests_total{job=\"fastapi\"}[1m])) by (method)",
          "legendFormat": "{{method}}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "reqps"
        }
      },
      "options": {
        "legend": {
          "displayMode": "list",
          "placement": "bottom"
        }
      }
    },
    {
      "id": 10,
      "title": "Response Time Percentiles",
      "type": "timeseries",
      "gridPos": { "x": 12, "y": 8, "w": 12, "h": 8 },
      "targets": [
        {
          "expr": "histogram_quantile(0.50, sum(rate(http_request_duration_seconds_bucket{job=\"fastapi\"}[5m])) by (le)) * 1000",
          "legendFormat": "P50",
          "refId": "A"
        },
        {
          "expr": "histogram_quantile(0.95, sum(rate(http_request_duration_seconds_bucket{job=\"fastapi\"}[5m])) by (le)) * 1000",
          "legendFormat": "P95",
          "refId": "B"
        },
        {
          "expr": "histogram_quantile(0.99, sum(rate(http_request_duration_seconds_bucket{job=\"fastapi\"}[5m])) by (le)) * 1000",
          "legendFormat": "P99",
          "refId": "C"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "ms"
        }
      },
      "options": {
        "legend": {
          "displayMode": "list",
          "placement": "bottom"
        }
      }
    },
    {
      "id": 11,
      "title": "HTTP Status Distribution",
      "type": "piechart",
      "gridPos": { "x": 0, "y": 16, "w": 8, "h": 8 },
      "targets": [
        {
          "expr": "sum(increase(http_requests_total{job=\"fastapi\"}[1h])) by (status)",
          "legendFormat": "{{status}}",
          "refId": "A"
        }
      ],
      "options": {
        "legend": {
          "displayMode": "list",
          "placement": "right"
        }
      }
    },
    {
      "id": 12,
      "title": "Top 10 Endpoints",
      "type": "bargauge",
      "gridPos": { "x": 8, "y": 16, "w": 8, "h": 8 },
      "targets": [
        {
          "expr": "topk(10, sum(rate(http_requests_total{job=\"fastapi\"}[5m])) by (handler))",
          "legendFormat": "{{handler}}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "reqps"
        }
      },
      "options": {
        "displayMode": "lcd",
        "orientation": "horizontal"
      }
    },
    {
      "id": 13,
      "title": "Memory & CPU Over Time",
      "type": "timeseries",
      "gridPos": { "x": 16, "y": 16, "w": 8, "h": 8 },
      "targets": [
        {
          "expr": "process_resident_memory_bytes{job=\"fastapi\"} / 1024 / 1024",
          "legendFormat": "Memory (MB)",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "decmbytes"
        }
      },
      "options": {
        "legend": {
          "displayMode": "list",
          "placement": "bottom"
        }
      }
    },
    {
      "id": 14,
      "title": "Request/Response Size",
      "type": "timeseries",
      "gridPos": { "x": 0, "y": 24, "w": 12, "h": 6 },
      "targets": [
        {
          "expr": "rate(http_request_size_bytes_sum{job=\"fastapi\"}[5m]) / rate(http_request_size_bytes_count{job=\"fastapi\"}[5m])",
          "legendFormat": "Avg Request Size",
          "refId": "A"
        },
        {
          "expr": "rate(http_response_size_bytes_sum{job=\"fastapi\"}[5m]) / rate(http_response_size_bytes_count{job=\"fastapi\"}[5m])",
          "legendFormat": "Avg Response Size",
          "refId": "B"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "bytes"
        }
      }
    },
    {
      "id": 15,
      "title": "Python GC Collections",
      "type": "timeseries",
      "gridPos": { "x": 12, "y": 24, "w": 12, "h": 6 },
      "targets": [
        {
          "expr": "rate(python_gc_collections_total{job=\"fastapi\"}[5m])",
          "legendFormat": "Gen {{generation}}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "short"
        }
      }
    }
  ],
  "schemaVersion": 39,
  "version": 1
}
